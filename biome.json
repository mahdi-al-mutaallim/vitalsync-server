{
	"$schema": "https://biomejs.dev/schemas/2.1.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!generated/**",
			"!node_modules/**",
			"!prisma/**",
			"!dist/**",
			"!bun.lockb",
			"!bun.lock",
			"!package.json",
			"!pnpm-lock.yaml",
			"!yarn.lock"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
